# Database Configuration (Required)
DATABASE_URL=postgresql://permit_user:your_password@localhost:5432/permit_system

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Session Security (Required - Generate a secure random string)
SESSION_SECRET=your_super_secure_session_secret_change_this_to_64_chars_minimum

# GitHub OAuth (Optional - Leave blank to disable GitHub login)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=https://your-domain.com/auth/github/callback

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Email Configuration (Optional)
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-email
SMTP_PASS=your-email-password